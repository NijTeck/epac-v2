{
  "$schema": "https://raw.githubusercontent.com/Azure/enterprise-azure-policy-as-code/main/Schemas/policy-set-definition-schema.json",
  "name": "windows-stig-cat1-initiative",
  "properties": {
    "displayName": "[EPAC] Windows STIG Category I Compliance",
    "policyType": "Custom",
    "description": "Enforces DISA STIG Category I (Critical) controls for Windows VMs.",
    "metadata": {
      "version": "1.0.0",
      "category": "Guest Configuration"
    },
    "policyDefinitions": [
      {
        "policyDefinitionReferenceId": "Windows_STIG_CAT1_Controls",
        "policyDefinitionId": "${root_scope_resource_id}/providers/Microsoft.Authorization/policyDefinitions/custom-gc-windows-stig-cat1",
        "parameters": {
          "effect": { "value": "[parameters(\'effect\')]" }
        }
      }
    ],
    "parameters": {
      "effect": {
        "type": "String",
        "defaultValue": "AuditIfNotExists"
      }
    }
  }
}
