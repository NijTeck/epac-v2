{
  "name": "custom-cm-linux-stig-cat2",
  "properties": {
    "displayName": "[Custom] Linux systems must meet STIG Category II (High Priority) requirements",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Ensures Linux VMs meet DISA STIG Category II (Medium severity) controls.",
    "metadata": {
      "version": "1.0.0",
      "category": "Guest Configuration",
      "nistControls": ["CM-6", "CM-2", "IA-5", "AC-2", "AU-2"],
      "stigCategory": "CAT II"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "defaultValue": "AuditIfNotExists",
        "allowedValues": ["AuditIfNotExists", "DeployIfNotExists", "Disabled"]
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "field": "Microsoft.Compute/virtualMachines/storageProfile.osDisk.osType",
            "equals": "Linux"
          }
        ]
      },
      "then": {
        "effect": "[parameters(\'effect\')]",
        "details": {
          "type": "Microsoft.GuestConfiguration/guestConfigurationAssignments",
          "name": "LinuxSTIG-CAT2",
          "existenceCondition": {
            "field": "Microsoft.GuestConfiguration/guestConfigurationAssignments/complianceStatus",
            "equals": "Compliant"
          }
        }
      }
    }
  }
}
